return function(Window)
    local FarmTab = Window:CreateTab("Farm", "sprout")
    FarmTab:CreateSection("Coins")
    _G.AutoCoinCollectEnabled = false

    local Toggle = FarmTab:CreateToggle({
       Name = "Auto Coin Collect",
       CurrentValue = false,
       Flag = "Toggle1",
       Callback = function(Value)
           _G.AutoCoinCollectEnabled = Value
           if Value then
               _G.CoinInterval = game:GetService("RunService").Heartbeat:Connect(function()
                   game:GetService("ReplicatedStorage").Events.CoinEvent:FireServer()
               end)
           else
               if _G.CoinInterval then
                   _G.CoinInterval:Disconnect()
                   _G.CoinInterval = nil
               end
           end
       end,
    })
end
